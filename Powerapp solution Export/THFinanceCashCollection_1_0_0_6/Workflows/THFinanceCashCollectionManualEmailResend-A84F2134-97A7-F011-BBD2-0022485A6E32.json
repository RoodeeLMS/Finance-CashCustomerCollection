          },
          "metadata": {
            "operationMetadataId": "e5f6a7b8-c9d0-1234-ef01-234567890123"
          },
          "type": "OpenApiConnection",
          "inputs": {
            "host": {
              "connectionName": "shared_commondataserviceforapps",
              "operationId": "UpdateRecord",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "cr7bb_thfinancecashcollectionemaillogs",
              "recordId": "@variables('varEmailLogID')",
              "item/cr7bb_errormessage": "@if(equals(outputs('Send_Email')?['statusCode'], 200), '', outputs('Send_Email')?['error']?['message'])",
              "item/cr7bb_sendstatus": "@if(equals(outputs('Send_Email')?['statusCode'], 200), 'Success', 'Failed')",
              "item/cr7bb_sentdatetime": "@utcNow()"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Respond_to_PowerApp": {
          "runAfter": {
