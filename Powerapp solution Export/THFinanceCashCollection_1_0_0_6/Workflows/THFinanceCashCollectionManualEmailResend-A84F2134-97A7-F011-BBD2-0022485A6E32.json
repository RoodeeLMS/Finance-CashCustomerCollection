              "emailMessage/Body": "@outputs('Get_EmailLog')?['body/cr7bb_emailbodypreview']",
              "emailMessage/Attachments": "@if(equals(outputs('Get_QR_Code')?['statusCode'], 200), createArray(json(concat('{\"Name\":\"', outputs('Get_Customer')?['body/cr7bb_customercode'], '_QRCode.jpg\",\"ContentBytes\":\"', base64(body('Get_QR_Code')), '\"}'))), createArray())",
              "emailMessage/Importance": "@{if(greaterOrEquals(outputs('Get_EmailLog')?['body/cr7bb_maxdaycount'], 3), 'High', 'Normal')}"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Update_EmailLog": {
          "runAfter": {
